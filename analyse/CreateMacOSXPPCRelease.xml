		<!-- Upload to ftp server -->
		<ftp server="139.124.68.1" passive="yes" remotedir="/FTPRoot/Users/buloup/Sites/documents/Analyse/${FTP_RELEASE_FOLDER}" userid="buloup" password="slqb9999" depends="no">
			<fileset dir="${RELEASE_DIRECTORY}" excludes=".project" />
